+	if (RFIFOREST(fd) < 4 || RFIFOREST(fd) < RFIFOL(fd,2))
 		return 0;
 	else {
-		int aid = RFIFOL(fd,4), cid = RFIFOL(fd,8), size = RFIFOW(fd,2);
+		int aid = RFIFOL(fd,6), cid = RFIFOL(fd,10), size = RFIFOL(fd,2);
 		struct online_char_data* character;
